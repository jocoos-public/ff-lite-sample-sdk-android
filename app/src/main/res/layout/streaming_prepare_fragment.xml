<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/asset_icon_22_22_ico_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/background_bottom"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/image_etc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/button_28_28_etc_option"
        app:layout_constraintBottom_toBottomOf="@+id/background_bottom"
        app:layout_constraintEnd_toEndOf="@+id/background_bottom"
        app:layout_constraintTop_toTopOf="@+id/background_bottom" />

    <ImageView
        android:id="@+id/image_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/button_28_28_camera_option"
        app:layout_constraintBottom_toBottomOf="@+id/background_bottom"
        app:layout_constraintEnd_toStartOf="@+id/image_etc"
        app:layout_constraintTop_toTopOf="@+id/background_bottom" />

    <ImageView
        android:id="@+id/image_videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic__1_asset_icon_22_22_ico_pip_1"
        app:layout_constraintBottom_toBottomOf="@+id/background_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_bottom" />

    <TextView
        android:id="@+id/next"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button_round25_color_primary"
        android:gravity="center"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/background_bottom"
        app:layout_constraintEnd_toEndOf="@+id/background_bottom"
        app:layout_constraintStart_toStartOf="@+id/background_bottom"
        app:layout_constraintTop_toTopOf="@+id/background_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>